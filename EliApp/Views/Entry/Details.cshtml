@model EliApp.Models.EntryModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Journal Entry</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.accountInvolved)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.accountInvolved)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.supportingFile)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.supportingFile)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.accountType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.accountType)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.state)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.state)
        </dd>
        @*Add a way to approve or decline entries here*@
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.amount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.amount)
        </dd>
    </dl>
</div>
@{
    if(Model.state == EntryState.PENDING)
    {
        <a asp-action="Approved" asp-route-id="@Model.Id" type="submit" class="btn btn-primary">Approve</a> 
        <a asp-action="Declined" asp-route-id="@Model.Id" type="submit" class="btn btn-danger">Decline</a>
        
    }
}

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
