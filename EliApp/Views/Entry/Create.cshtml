@model EliApp.Models.EntryModel

@{
    ViewData["Title"] = "Create";
}
<style>
    * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    color: black;
    }
</style>

<h1 class="link-light">Create</h1>

<h4 class="link-light">Make a New Entry</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="account1" class="control-label link-light">Account 1</label>
                <input asp-for="account1" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="account2" class="control-label link-light">Account 2</label>
                <select asp-for="account2" class="form-select" asp-items="@(new SelectList(ViewBag.message, "Id", "AccountName"))"></select>
                <span asp-validation-for="account2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="accountType" class="control-label link-light">Type of Account</label>
                <select asp-for="accountType" class="form-select" asp-items="Html.GetEnumSelectList<AccountType>()"></select>
            </div>
            <div class="form-group">
                <label asp-for="amount" class="control-label link-light">Amount</label>
                <input asp-for="amount" class="form-control" />
                <span asp-validation-for="amount" class="text-danger"></span>
            </div>
            @*Supporting File Uploading*@
            <div>
                <label class="link-light">Supporting File</label>
                <input asp-for="supportingFile" class="form-control" />
            </div>
            @* Uploading method 1
            <form enctype="multipart/form-data" method="post">
                <dl>
                    <dt>
                        Upload Supporting File
                    </dt>
                    <dd>
                        <input asp-for="EntryUpload" type="file"/>
                    </dd>
                </dl>
                <input asp-page-handler="Upload" class="btn btn-primary" type="submit" value="EntryUpload" />
            </form>*@
            
            @* Uploading Method 2
            <div class="form-group" accept=".txt,.pdf,.doc,.docx,.png,.jpg,.jpeg">
                Supporting File: <input type="file" asp-for="supportingFile" />
            </div>*@
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

