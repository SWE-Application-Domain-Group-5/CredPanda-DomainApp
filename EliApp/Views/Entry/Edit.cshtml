@model EliApp.Models.EntryModel

@{
    ViewData["Title"] = "Edit";
}
<style>
    * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    color: black;
    }
</style>

<h1 class="link-light">Edit</h1>

<h4 class="link-light">Journal Entry</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="DateTime" class="control-label link-light"></label>
                <input asp-for="DateTime" class="form-control" />
                <span asp-validation-for="DateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="account1" class="control-label link-light"></label>
                <input asp-for="account1" class="form-control" />
                <span asp-validation-for="account1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="supportingFile" class="control-label link-light"></label>
                <input asp-for="supportingFile" class="form-control" />
                <span asp-validation-for="supportingFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="accountType" class="control-label link-light"></label>
                <select asp-for="accountType" class="form-select"></select>
                <span asp-validation-for="accountType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="state" class="control-label link-light"></label>
                <select asp-for="state" class="form-select"></select>
                <span asp-validation-for="state" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="amount" class="control-label link-light"></label>
                <input asp-for="amount" class="form-control" />
                <span asp-validation-for="amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

