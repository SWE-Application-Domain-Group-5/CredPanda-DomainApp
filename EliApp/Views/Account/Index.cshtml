@model IEnumerable<EliApp.Models.AccountModel>

@{
    ViewData["Title"] = "Chart of Accounts";
}

@using (Html.BeginForm())
{
    <div class="input-group-text">
        Find: @Html.TextBox("SearchString")
        <input type="submit" value="Search" class="btn btn-primary" />
    </div>
}
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: black;
    }
</style>


<h1>Chart of Accounts</h1>


<p>
    <a asp-action="Create" class="btn btn-primary mb-3" style="width:auto">Create New Account</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AccountName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountCategory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountSubcategory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountInitialBalance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountCurrentBalance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountCreationTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountUserID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountOrder)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountStatement)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AccountName)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="link-info">@Html.DisplayFor(modelItem => item.AccountNumber)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountCategory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountSubcategory)
            </td>
            <td>
                @item.AccountInitialBalance.ToString("C")
            </td>
            <td>
                @item.AccountCurrentBalance.ToString("C")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountCreationTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountUserID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountOrder)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountStatement)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
