@*page*@
@using EliApp.Models
@model EliApp.Models.AccountModel

@{
    ViewData["Title"] = "Create New Account";
}

<h1>Create New Account</h1>

<h4>AccountModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AccountName" class="control-label"></label>
                <input asp-for="AccountName" class="form-control" />
                <span asp-validation-for="AccountName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountDescription" class="control-label"></label>
                <input asp-for="AccountDescription" class="form-control" />
                <span asp-validation-for="AccountDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountType" class="control-label">Type of Account</label>
                <select asp-for="AccountType" class="form-control">
                    <option>Debit</option>
                    <option>Credit</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="AccountCategory" class="control-label"></label>
                <input asp-for="AccountCategory" class="form-control" />
                <span asp-validation-for="AccountCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountSubcategory" class="control-label"></label>
                <input asp-for="AccountSubcategory" class="form-control" />
                <span asp-validation-for="AccountSubcategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountInitialBalance" class="control-label"></label>
                <input asp-for="AccountInitialBalance" class="form-control" />
                <span asp-validation-for="AccountInitialBalance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountOrder" class="control-label"></label>
                <input asp-for="AccountOrder" class="form-control" />
                <span asp-validation-for="AccountOrder" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountStatement" class="control-label"></label>
                <select asp-for="AccountStatement" class="form-control" asp-items="Html.GetEnumSelectList<Statement>()"></select>
                <span asp-validation-for="AccountStatement" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountComment" class="control-label"></label>
                <input asp-for="AccountComment" class="form-control" />
                <span asp-validation-for="AccountComment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

