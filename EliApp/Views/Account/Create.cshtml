@*page*@
@using EliApp.Models
@model EliApp.Models.AccountModel

@{
    ViewData["Title"] = "Create New Account";
}
<style>
    * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    color: black;
    }
</style>

<h1 class="link-light">Create New Account</h1>

<h4 class="link-light">AccountModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AccountUserID" class="control-label link-light"></label> <label class="link-light"> of Creator </label>
                <input asp-for="AccountUserID" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="AccountName" class="control-label link-light"></label>
                <input asp-for="AccountName" class="form-control" />
                <span asp-validation-for="AccountName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountDescription" class="control-label link-light"></label> <label label class="link-light">(Optional)</label>
                <input asp-for="AccountDescription" class="form-control" />
                <span asp-validation-for="AccountDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountType" class="control-label link-light">Type of Account</label>
                <select asp-for="AccountType" class="form-select" asp-items="Html.GetEnumSelectList<AccountType>()"></select>
            </div>
            <div class="form-group">
                <label asp-for="AccountCategory" class="control-label link-light"></label>
                <select asp-for="AccountCategory" class="form-select" asp-items="Html.GetEnumSelectList<AccountCategory>()"></select>
                <span asp-validation-for="AccountCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountSubcategory" class="control-label link-light"></label> <label label class="link-light">(Optional)</label>
                <input asp-for="AccountSubcategory" class="form-control" />
                <span asp-validation-for="AccountSubcategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountInitialBalance" class="control-label link-light"></label>
                <input asp-for="AccountInitialBalance" class="form-control" />
                <span asp-validation-for="AccountInitialBalance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountOrder" class="control-label link-light"></label>
                <input asp-for="AccountOrder" class="form-control" />
                <span asp-validation-for="AccountOrder" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountStatement" class="control-label link-light"></label>
                <select asp-for="AccountStatement" class="form-select" asp-items="Html.GetEnumSelectList<Statement>()"></select>
                <span asp-validation-for="AccountStatement" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

